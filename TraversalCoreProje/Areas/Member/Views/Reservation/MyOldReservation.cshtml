@model List<Reservation>

@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Geçmiş Rezervasyonlarım</h1>


<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Lokasyon</th>
        <th>Kişi Sayısı</th>
        <th>Rezervasyon Tarihi</th>
        <th>Gün</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ReservationID</td>
            <td>@item.Destination?.City</td>
            <td>@item.PersonCount KİŞİ</td>
            <td>@item.ReservationDate.ToString("dd-MMMM-yyyy")</td>
            <td>@item.Status</td>
        </tr>
    }


</table>