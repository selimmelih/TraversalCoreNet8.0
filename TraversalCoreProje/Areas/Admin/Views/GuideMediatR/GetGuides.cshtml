@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rehber Bilgi Düzenleme Sayfası MediatR</h2>

<form method="post">
    <input type="hidden" asp-for="GuideID"/>
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Rehber Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button class="btn btn-outline-primary" type="submit">Bilgileri Güncelle</button>
</form>