@model VisitorViewModel
@{
    ViewData["Title"] = "VisitorAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile Ziyaretçi Ekleme</h1>

<br />

<form method="post" asp-action="VisitorAdd">
    <label>Ziyaretçi Adı</label>
    <input type="text" class="form-control" asp-for="Name" /><br /><br />
    <label>Ziyaretçi Soyadı</label>
    <input type="text" class="form-control" asp-for="Surname" /><br /><br />
    <label>Ziyaretçi Mail Adresi</label>
    <input type="email" class="form-control" asp-for="Mail" /><br /><br />
    <label>Ziyaretçi Şehri</label>
    <input type="text" class="form-control" asp-for="City" /><br /><br />
    <label>Ziyaretçi Ülke</label>
    <input type="text" class="form-control" asp-for="Country" /><br /><br />
    <button class="btn btn-outline-primary" type="submit">Ziyaretçi Ekle</button>
</form>