@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<ul class="nav navbar-nav float-right">
    <li class="dropdown dropdown-language nav-item">
        <a class="dropdown-toggle nav-link" id="dropdown-flag" href="/member/#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="flag-icon flag-icon-us"></i>
            <span class="selected-language"></span>
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdown-flag">
            <div class="arrow_box">
                <a class="dropdown-item" asp-route-culture="de">
                    <i class="flag-icon flag-icon-ru"></i> @localizer["Deutsch"]
                </a>
                <a class="dropdown-item" asp-route-culture="en">
                    <i class="flag-icon flag-icon-us"></i> @localizer["English"]
                </a>
                <a class="dropdown-item" asp-route-culture="gr">
                    <i class="flag-icon flag-icon-cn"></i> @localizer["Greece"]
                </a>
                <a class="dropdown-item" asp-route-culture="fr">
                    <i class="flag-icon flag-icon-fr"></i> @localizer["French"]
                </a>
                <a class="dropdown-item" asp-route-culture="es">
                    <i class="flag-icon flag-icon-es"></i> @localizer["Spanish"]
                </a>
                <a class="dropdown-item" asp-route-culture="tr">
                    <i class="flag-icon flag-icon-tr"></i> @localizer["Turkish"]
                </a>
            </div>
        </div>
    </li>
</ul>
