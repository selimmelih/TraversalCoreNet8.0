@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Bir Yorum Ekleyin</h4>
        <p class="mb-4">
            * İşaretli Alanları Doldurmanız Zorunludur.
        </p>
        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <div class="form-group">
                <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                          spellcheck="false"></textarea>
            </div>
            <div class="input-grids row">

                <div class="form-group col-lg-6">
                    <input type="text" name="CommentUser" value="@ViewBag.NameSurname" class="form-control" placeholder="Adınız Soyadınız*"
                           required readonly>
                </div>
                <div class="form-group col-lg-6">
                    <input type="hidden" name="DestinationID" class="form-control" value="@ViewBag.destId" placeholder="Destinasyon ID*" readonly required>
                </div>
                <div class="form-group col-lg-6">
                    <input type="hidden" name="AppUserId" class="form-control" value="@ViewBag.userId" placeholder="User ID*" readonly required>
                </div>
            </div>

            <div class="submit text-right">
                <button class="btn btn-style btn-primary">Yorum Ekle</button>
            </div>
        </form>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
}
else
{
    <h2>Yorum yapabilmek için üye olmanız gerekmektedir.</h2>
}