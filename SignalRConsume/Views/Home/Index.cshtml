@{
    ViewData["Title"] = "Home Page";
}


@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

    <script type="text/javascript">

        $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5187/VisitorHub").build();
            //baglantı oncesı durumu
            $("#connectionStatus").text(connection.state);
            //baglantı sonrası durumu
            connection.start().then(() => {
                $("#connectionStatus").text(connection.state);

            }).catch((err) => { console.log(err) });
        })
    </script>
}

<div class="continer">
    <br />
    <div class="alert alert-warning">
        Bağlantı Durumu:<b id=connectionStatus></b>
    </div>
</div>